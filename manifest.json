{
  "manifest_version": 2,
  "name": "Add to GoodLinks",
  "version": "1.0",
  "description": "Save the current page to GoodLinks using the x-callback-url scheme.",
  "permissions": ["tabs", "storage", "notifications"],
  "browser_action": {
    "default_icon": {
      "48": "icons/goodlinks-icon-48.png"
    },
    "default_title": "Save to GoodLinks"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icons/goodlinks-icon-48.png"
  }
}
